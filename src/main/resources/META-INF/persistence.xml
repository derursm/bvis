<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

  <persistence-unit name="primary">
    <jta-data-source>java:jboss/datasources/ProcessEngine</jta-data-source>
    <class>org.camunda.bpm.bvis.bvis.OrderEntity</class>
    <class>org.camunda.bpm.bvis.Entites.Car</class>
    <class>org.camunda.bpm.bvis.Entites.Claim</class>
    <class>org.camunda.bpm.bvis.Entites.Customer</class>
    <class>org.camunda.bpm.bvis.Entites.Insurance</class>
    <class>org.camunda.bpm.bvis.Entites.InvolvedParty</class>
    <class>org.camunda.bpm.bvis.Entites.PickUpLocation</class>
    <class>org.camunda.bpm.bvis.Entites.RentalOrder</class>
    <properties>
      <!-- Properties for Hibernate -->
      <property name="hibernate.hbm2ddl.auto" value="create-drop" />
      <property name="hibernate.show_sql" value="true" />
    </properties>
  </persistence-unit>

</persistence>